set ignorecase
set smartcase

nnoremap s <Nop>

" ------------------------------------
" Window
" ------------------------------------
nnoremap ss :<C-u>split<CR><C-w>w
nnoremap sv :<C-u>vsplit<CR><C-w>w
nnoremap sh <C-w>h
nnoremap sj <C-w>j
nnoremap sk <C-w>k
nnoremap sl <C-w>l

" ------------------------------------
" Tab
" ------------------------------------
nnoremap te :xccmd newTab<CR>
nnoremap gt :xccmd selectNextTab<CR>
nnoremap tn :xccmd selectNextTab<CR>
nnoremap gT :xccmd selectPreviousTab<CR>
nnoremap tp :xccmd selectPreviousTab<CR>

" ------------------------------------
" Edit
" ------------------------------------
nnoremap <C-o> :pjump<CR>
nnoremap <C-i> :njump<CR>
nnoremap <C-j> :xccmd moveCurrentLineDown<CR>
nnoremap <C-k> :xccmd moveCurrentLineUp<CR>
nnoremap Â¥rn :xcmenucmd Rename...<CR>

" ------------------------------------
" Xcode
" ------------------------------------
nnoremap <Space>r :run<CR>
nnoremap <Space>b :xcmenucmd Build<Cr>
nnoremap <Space>c :xcmenucmd Clean<Cr>
nnoremap <Space>f :xccmd openQuickly<CR>
